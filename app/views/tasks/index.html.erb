  <h1>My tasks</h1>
  <div class="d-flex flex-column ">
    <% @tasks.each do |task| %>

      <div>
        <%= check_box_tag "task_#{task.id}", task.id, task.completed, disabled: true %>
        <%= label_tag "task_#{task.id}" do %>
        <%= link_to task.title, task_path(task) %>
        <% end %>
        <%= link_to task_path(task.id), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
        <i class="fa-solid fa-trash"></i>
        <% end %>
      </div>

    <% end %>
  </div>
<p><%= link_to "+ Add a new task", new_task_path %></p>
